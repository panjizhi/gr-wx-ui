.user-infos {
    height: 140px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    display: flex;
}

.user-logo {
    width: 64px;
    height: 64px;
    border-radius: 100%;
}

.user-name {
    margin-top: 12px;
    color: #666;
}

.paper-list, .no-data {
    padding: 0 30rpx 40rpx;
    display: block;
}

.no-data {
    text-align: center;
}

.no-data-tips {
    padding: 40rpx 0;
    background-color: #fff;
    border-radius: 4rpx;
    color: #b2b2b2;
    font-size: 13px;
}

.weui-cells {
    margin: 0 0 12px !important;
}
